#!/usr/bin/env php
<?php 
namespace test;

// OK, it's not, let give Composer autoloader a try!
$autoloadFile = __DIR__ . '/../../../autoload.php';
if (\file_exists($autoloadFile)) {
    require_once $autoloadFile;
} else {
    require_once __DIR__ . '/../vendor/autoload.php';
}
use test\Symfony\Component\Console\Application;
use test\PrestaShop\CodingStandards\Command\CsFixerInitCommand;
use test\PrestaShop\CodingStandards\Command\PhpStanInitCommand;
$app = new \test\Symfony\Component\Console\Application();
$app->add(new \test\PrestaShop\CodingStandards\Command\CsFixerInitCommand());
$app->add(new \test\PrestaShop\CodingStandards\Command\PhpStanInitCommand());
$app->run();
